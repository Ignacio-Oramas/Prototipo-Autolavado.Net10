@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card shadow-sm mt-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="fa-solid fa-right-to-bracket"></i> @ViewData["Title"]</h5>
            </div>
            <div class="card-body">
                <section>
                    <form id="account" method="post">
                        <h5 class="card-title text-center mb-4">Ingresa tus credenciales</h5>
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="nombre@ejemplo.com" />
                            <label asp-for="Input.Email"><i class="fa-solid fa-envelope"></i> Correo Electrónico</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="contraseña" />
                            <label asp-for="Input.Password"><i class="fa-solid fa-lock"></i> Contraseña</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        
                        <div class="checkbox mb-3 ms-1">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                Recordarme
                            </label>
                        </div>
                        
                        <div>
                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">
                                <i class="fa-solid fa-sign-in-alt"></i> Iniciar Sesión
                            </button>
                        </div>
                        
                        <div class="mt-3 text-center">
                            <p>
                                <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none">¿Olvidaste tu contraseña?</a>
                            </p>
                            <p>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none">Registrar un nuevo usuario</a>
                            </p>
                            <!-- 
                            <p>
                                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-decoration-none">Reenviar confirmación de correo</a>
                            </p>
                            -->
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}